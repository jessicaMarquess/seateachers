{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <table width="100%">
        <a href="/students/create">Novo</a>
        <thead>
            <th>Alunos</th>
            <th>E-mail</th>
            <th>Ano Escolar</th>
            <th>Ação</th>
        </thead>
        <tbody>
            {% for student in students %}
            <tr>
                <td>
                    <span style="background-image: url({{student.avatar_url}})"></span>
                    {{student.name}}
                </td>                
                <td>{{student.email}}</td>
                <td id = "grade">
                  <span>{{student.grade}}</span> 
                </td>                    
                <td><a href="/students/{{student.id}}">Visualizar</a></td>    
            </tr>   
            {% endfor%}
        </tbody>
    </table>            
</div>
{% endblock content %}