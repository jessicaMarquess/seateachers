{% extends "layout.njk" %}

{% block content %}
  <div class="card">
            <section 
            class = "avatar"
            style = "border-radius: 5px 0 0 5px; background: url({{teacher.avatar_url}}) no-repeat center center / cover">
            </section>
            <section class ="details">
                <h3>Professor(a)</h3>
                <div class="item">
                    <div>Nome Completo:</div>
                    <div>{{teacher.name}}</div>
                </div>
                <div class="item">
                    <div>Idade:</div>
                    <div>{{teacher.age}}</div>
                </div>
                <div class="item">
                    <div>Grau de Escolaridade:</div>
                    <div>{{teacher.edu_level}}</div>
                </div>
                <div class="item">
                    <div>Tipo de Aula</div>
                    <div>{{"À Distância" if teacher.tip == "D" else "Presencial"}}</div>
                </div>
                <div class="item">
                    <div>Acompanhamento:</div>
                    <div>
                        {% for service in teacher.proceeding %}
                            <span>{{service}}</span>
                        {% endfor %}  
                    </div>
                </div>
                <div class="item">
                    <div>Desde:</div>
                    <div>{{teacher.created_at}}</div>
                </div>

                <a href="/teachers/{{teacher.id}}/edit" class = 'button'>Editar</a>
            </section>
        </div>
{% endblock content %}