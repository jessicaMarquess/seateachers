{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <table width="100%">
        <a href="/teachers/create">Novo</a>
        <thead>
            <th>Professor</th>
            <th>Disciplinas</th>
            <th>Ação</th>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td>
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}
                </td>                
                <td>
                    {% for discipline in teacher.proceeding %}
                    <span>{{discipline}}</span>
                    {% endfor %}
                </td>                    
                <td><a href="/teachers/{{teacher.id}}">Visualizar</a></td>    
            </tr>    
            {% endfor %}
        </tbody>
    </table>            
</div>
{% endblock content %}