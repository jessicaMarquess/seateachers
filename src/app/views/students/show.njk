{% extends "layout.njk" %}

{% block content %}
  <div class="card">
            <section 
            class = "avatar"
            style = "border-radius: 5px 0 0 5px; background: url({{student.avatar_url}}) no-repeat center center / cover">
            </section>
            <section class ="details">
                <h3>Aluno(a)</h3>
                <div class="item">
                    <div>Nome Completo:</div>
                    <div>{{student.name}}</div>
                </div>
                <div class="item">
                    <div>E-mail</div>
                    <div>{{student.email}}</div>
                </div>
                <div class="item">
                    <div>Aniversário</div>
                    <div>{{student.birth_date}}</div>
                </div>
                <div class="item">
                    <div>Ano Escolar</div>
                    <div>{{student.grade}}</div>
                </div>
                <div class="item">
                    <div>Carga Horária</div>
                    <div>{{student.workload}}</div>
                </div>
                <a href="/students/{{student.id}}/edit" class = 'button'>Editar</a>
            </section>
        </div>
{% endblock content %}